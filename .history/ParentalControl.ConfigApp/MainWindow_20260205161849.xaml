<Window x:Class="ParentalControl.ConfigApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ParentalControl.ConfigApp"
        mc:Ignorable="d"
        Title="Controle Parental - Configuração" 
        Height="500" Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">
    
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Cabeçalho -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="🛡️ Controle Parental Windows" 
                       FontSize="24" 
                       FontWeight="Bold"
                       Foreground="#2C3E50"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Configure os limites de tempo de uso do computador" 
                       FontSize="12" 
                       Foreground="Gray"
                       HorizontalAlignment="Center"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Conteúdo Principal -->
        <Border Grid.Row="1" 
                BorderBrush="#E0E0E0" 
                BorderThickness="1" 
                CornerRadius="8"
                Padding="20"
                Background="White">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Status Atual -->
                    <GroupBox Header="📊 Status Atual" Margin="0,0,0,20" Padding="15">
                        <StackPanel>
                            <TextBlock x:Name="StatusText" 
                                       Text="Serviço: Parado"
                                       FontWeight="SemiBold"
                                       Foreground="#E74C3C"/>
                            <TextBlock x:Name="SessionText" 
                                       Text="Sessão: Nenhuma ativa"
                                       Margin="0,5,0,0"/>
                            <TextBlock x:Name="TimeText" 
                                       Text="Tempo usado: 0 minutos"
                                       Margin="0,5,0,0"/>
                            <TextBlock x:Name="RemainingText" 
                                       Text="Tempo restante: --"
                                       FontWeight="Bold"
                                       FontSize="16"
                                       Foreground="#27AE60"
                                       Margin="0,10,0,0"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Configuração de Tempo -->
                    <GroupBox Header="⏱️ Configuração de Tempo Limite" Margin="0,0,0,20" Padding="15">
                        <StackPanel>
                            <TextBlock Text="Tempo máximo permitido (em minutos):"/>
                            <Grid Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <Slider x:Name="TimeLimitSlider"
                                        Grid.Column="0"
                                        Minimum="15"
                                        Maximum="480"
                                        Value="60"
                                        TickFrequency="15"
                                        IsSnapToTickEnabled="True"
                                        VerticalAlignment="Center"
                                        ValueChanged="TimeLimitSlider_ValueChanged"/>
                                
                                <TextBlock x:Name="TimeLimitLabel" 
                                           Grid.Column="1"
                                           Text="60 min (1h)"
                                           FontWeight="Bold"
                                           FontSize="16"
                                           Foreground="#3498DB"
                                           VerticalAlignment="Center"
                                           Margin="15,0,0,0"
                                           MinWidth="100"
                                           TextAlignment="Right"/>
                            </Grid>
                            
                            <TextBlock Text="Presets rápidos:" Margin="0,15,0,5"/>
                            <WrapPanel>
                                <Button Content="10 seg" Click="SetPreset_Click" Tag="0.166" Background="#E74C3C" Foreground="White"/>
                                <Button Content="30 min" Click="SetPreset_Click" Tag="30"/>
                                <Button Content="1 hora" Click="SetPreset_Click" Tag="60"/>
                                <Button Content="2 horas" Click="SetPreset_Click" Tag="120"/>
                                <Button Content="3 horas" Click="SetPreset_Click" Tag="180"/>
                                <Button Content="4 horas" Click="SetPreset_Click" Tag="240"/>
                            </WrapPanel>
                        </StackPanel>
                    </GroupBox>

                    <!-- Ação ao Expirar -->
                    <GroupBox Header="🔒 Ação ao Atingir Limite" Margin="0,0,0,20" Padding="15">
                        <StackPanel>
                            <RadioButton x:Name="LockRadio" 
                                         Content="Bloquear a tela (requer senha para desbloquear)" 
                                         IsChecked="True"
                                         Margin="0,0,0,10"/>
                            <RadioButton x:Name="LogoutRadio" 
                                         Content="Fazer logout completo do usuário"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Avisos -->
                    <GroupBox Header="🔔 Sistema de Avisos" Padding="15">
                        <StackPanel>
                            <CheckBox x:Name="EnableWarningsCheck" 
                                      Content="Exibir avisos antes do bloqueio" 
                                      IsChecked="True"
                                      FontWeight="SemiBold"
                                      Margin="0,0,0,10"/>
                            <TextBlock Text="Serão exibidas notificações aos 15, 10 e 5 minutos restantes."
                                       FontSize="12"
                                       Foreground="Gray"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Botões de Ação -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0">
            <Button x:Name="SaveButton"
                    Content="💾 Salvar Configurações" 
                    Background="#27AE60" 
                    Foreground="White"
                    Click="SaveButton_Click"
                    Padding="30,12"/>
            <Button x:Name="RefreshButton"
                    Content="🔄 Atualizar Status" 
                    Background="#3498DB" 
                    Foreground="White"
                    Click="RefreshButton_Click"/>
            <Button x:Name="TestButton"
                    Content="🧪 Testar Bloqueio" 
                    Background="#E67E22" 
                    Foreground="White"
                    Click="TestButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
